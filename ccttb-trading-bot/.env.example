# Exchange API Configuration
EXCHANGE_NAME=binance
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here
EXCHANGE_TESTNET=true

# Trading Configuration
DEFAULT_TRADING_PAIR=BTC/USDT
DEFAULT_TIMEFRAME=1h
DEFAULT_POSITION_SIZE=0.01
MAX_POSITION_SIZE=0.1
RISK_PERCENTAGE=2
STOP_LOSS_PERCENTAGE=2
TAKE_PROFIT_PERCENTAGE=5

# AI Agent Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MODEL=claude-sonnet-4-5-20250929
AI_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.7

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/trading-bot
N8N_API_KEY=your_n8n_api_key_here
N8N_SERVER_PORT=3000
N8N_ENABLED=true

# Risk Management
MAX_DAILY_LOSS=100
MAX_DAILY_TRADES=10
ENABLE_TRAILING_STOP=true
TRAILING_STOP_PERCENTAGE=1.5

# Database (Optional)
DB_TYPE=sqlite
DB_PATH=./data/trading.db

# Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=
EMAIL_ENABLED=false

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/trading-bot.log

# Strategy Selection
ACTIVE_STRATEGY=rsi_macd
# Available: rsi_macd, bollinger_bands, ema_crossover, ml_prediction, hybrid

# Backtesting
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=10000
