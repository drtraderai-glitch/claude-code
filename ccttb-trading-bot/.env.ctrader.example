# ==========================================
# cTRADER CONFIGURATION
# ==========================================

# Connection Type (use ctrader instead of exchange name)
EXCHANGE_NAME=ctrader

# cTrader FIX API Configuration
CTRADER_HOST=demo-uk-eqx-01.p.c-trader.com
CTRADER_PORT_SSL=5212
CTRADER_PORT_PLAIN=5202
CTRADER_USE_SSL=true

# Your cTrader Credentials
# Format: demo.brokername.accountnumber or live.brokername.accountnumber
CTRADER_SENDER_COMP_ID=demo.icmarkets.9578804
CTRADER_TARGET_COMP_ID=cServer
CTRADER_SENDER_SUB_ID=TRADE
CTRADER_PASSWORD=your_account_password_here

# ==========================================
# TRADING CONFIGURATION
# ==========================================

# Forex pairs (no slash)
DEFAULT_TRADING_PAIR=EURUSD
DEFAULT_TIMEFRAME=1h

# Position sizing (in lots)
DEFAULT_POSITION_SIZE=0.01
MAX_POSITION_SIZE=0.1

# Risk management (in pips or percentage)
RISK_PERCENTAGE=2
STOP_LOSS_PIPS=20
TAKE_PROFIT_PIPS=40

# ==========================================
# AI AGENT CONFIGURATION
# ==========================================
ANTHROPIC_API_KEY=sk-ant-your-key-here
AI_ENABLED=true
AI_MODEL=claude-sonnet-4-5-20250929
AI_CONFIDENCE_THRESHOLD=0.7

# ==========================================
# N8N INTEGRATION
# ==========================================
N8N_WEBHOOK_URL=http://localhost:5678/webhook/trading-bot
N8N_API_KEY=your_n8n_api_key_here
N8N_SERVER_PORT=3000
N8N_ENABLED=true

# ==========================================
# RISK MANAGEMENT
# ==========================================
MAX_DAILY_LOSS=100
MAX_DAILY_TRADES=10
ENABLE_TRAILING_STOP=true
TRAILING_STOP_PIPS=15

# ==========================================
# STRATEGY
# ==========================================
ACTIVE_STRATEGY=hybrid
# Available: rsi_macd, bollinger_bands, ema_crossover, hybrid

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FILE=./logs/trading-bot.log

# ==========================================
# NOTIFICATION
# ==========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=
EMAIL_ENABLED=false

# ==========================================
# MODE
# ==========================================
# Note: cTrader uses different hosts for demo/live
# For demo: demo-uk-eqx-01.p.c-trader.com
# For live: live-uk-eqx-01.p.c-trader.com (change in CTRADER_HOST)
CTRADER_MODE=demo
